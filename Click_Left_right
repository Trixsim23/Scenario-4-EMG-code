// inclusion of mouse library
#include "Mouse.h"

// declaration of variables
const int up = A0;
const int down = A1;
const int left = A2;
const int right = A3;
const int clickleft = A4;

void setup() {
  Serial.begin(9600);
  // initialize mouse control:
  Mouse.begin();
  
  pinMode(up,INPUT);
  pinMode(down,INPUT);
  pinMode(left,INPUT);
  pinMode(right,INPUT);
  pinMode(clickleft,INPUT);
  pinMode(2,INPUT);

}

void loop() {
int sensorValue0 = analogRead(up);
int sensorValue1 = analogRead(down);
int sensorValue2 = analogRead(left);
int sensorValue3 = analogRead(right);
int sensorValue4 = analogRead(clickleft);
  Serial.println(sensorValue4);
  if (sensorValue0 > 600) {
    Mouse.move(0,-40);
    delay(1000);
    
  }
  if (sensorValue1 > 600) {
    Mouse.move(0,40);
    delay(1000);
  }
  if (sensorValue2 > 600) {
    Mouse.move(-40,0);
    delay(1000);
  }
  if (sensorValue3 > 600) {
    Mouse.move(40,0);
    delay(1000);
  }
  if (sensorValue4 > 59) {
    Mouse.click(MOUSE_LEFT);
    delay(1000);
    if (digitalRead(2)==HIGH){
      Mouse.end();
    }
  }

}
