#include <Mouse.h>
//initialising variables used to store data readings and reference values 
int EMGVal = 0;
int EMGleftval=0;
int EMGrightval=0;

//treshold values 
int EMGclick = 1.5;
int EMGleft=0;
int EMGright=0;

// reminders for the names of the pins 
// click = A0;
// left=A1;
// right=A2;

// INITIALISING THE INPUT PINS AND TURNING ON SERIAL COMMUNICATION 
void setup() {
pinMode(5,INPUT);
Serial.begin(9600);
}

void loop() {
  //the code only runs when there is a voltage running through pin A5 
  if (digitalRead(A5) ==HIGH){ 
    //reads the signals from EMG
    EMGVal = analogRead(A0);
    EMGleftval=analogRead(A1);
    EMGrightval=analogRead(A2);
    //plotting everything on one graph 
    Serial.print(EMGVal);
    Serial.print(",");
    Serial.print((EMGleftval+2046));
    Serial.print(",");
    Serial.println((EMGrightval+1023));
  

    if (EMGVal > EMGclick) {
      //Mouse.click();
      delay(100);
    }
    if (EMGleftval > EMGleft){
      //Mouse.move(-40,0);
      delay(100);
    } 
    if(EMGrightval > EMGright){
      //Mouse.move(40,0);
      delay(100);
    }

  }
  else {Serial.println("Goodbye!");
  //Serial.println("SAFETY FEATURE ON PLEASE CONNECT A5 TO 3.3V");
  delay(1000);
  }

}
